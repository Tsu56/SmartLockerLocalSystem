#: import get_color_from_hex kivy.utils.get_color_from_hex
#: set LIGHT_BG get_color_from_hex("#F7F8FC")
#: set DARK_BLUE get_color_from_hex("#34495E")
#: set STATUS_READY_COLOR get_color_from_hex("#E0E0E0")
#: set STATUS_SUCCESS_COLOR get_color_from_hex("#2ECC71")
#: set STATUS_ERROR_COLOR get_color_from_hex("#E74C3C")

<IDCardLoginScreen@MDScreen>:
    name: "id_card_login"
    md_bg_color: LIGHT_BG

    # 2. MDCard หลักที่อยู่ตรงกลางหน้าจอ
    MDCard:
        id: id_card_holder
        size_hint: None, None
        size: "200dp", "320dp" # กำหนดขนาดของการ์ด
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        md_bg_color: get_color_from_hex("#FFFFFF")
        line_width: 1
        line_color: STATUS_READY_COLOR

        MDBoxLayout:
            orientation: 'vertical'
            padding: "20dp"
            spacing: "20dp"
            halign: 'center'
            valign: 'center'
    
            Image:
                source: 'icons/id_card_icon.png'
                size_hint_y: None
                height: "200dp"
                allow_stretch: True # อนุญาตให้รูปภาพยืด/หด
                keep_ratio: True    # รักษาสัดส่วนของรูปภาพ
                pos_hint: {'center_x': 0.5}

            # 2.2 คำแนะนำ
            MDLabel:
                text: "Please insert your ID card."
                halign: "center"
                font_style: "H6"
                theme_text_color: "Custom"
                text_color: DARK_BLUE
                size_hint_y: None
                height: self.texture_size[1]
                
            # 3. สถานะ (Status) ที่ด้านล่างสุด
            MDLabel:
                id: status_label
                text: "Status: Ready"
                halign: "center"
                font_style: "Caption"
                theme_text_color: "Secondary"
                size_hint_y: None
                height: self.texture_size[1]
            
    # 4. ปุ่มยกเลิก
    MDRectangleFlatButton:
        text: "CANCEL"
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        line_color: STATUS_ERROR_COLOR
        theme_text_color: "Custom"
        text_color: STATUS_ERROR_COLOR
        on_release: app.go_back()
